<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingRight="6dp">

    <LinearLayout
        android:id="@+id/caixa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="6dp"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="9dp"
        android:layout_marginBottom="6dp"
        android:background="@drawable/bg_ballon_message_rem"
        android:orientation="vertical">


        <TextView
            android:id="@+id/textNameRemetente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textSize="11sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textMessageTexto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/imageMessageFoto"
            android:layout_width="190dp"
            android:layout_height="150dp"
            android:maxWidth="150dp"
            android:maxHeight="190dp"
            android:visibility="gone"
            tools:srcCompat="@tools:sample/backgrounds/scenic[16]" />
    </LinearLayout>
</RelativeLayout>